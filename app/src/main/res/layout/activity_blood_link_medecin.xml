        android:textSize="20sp"
        android:background="@drawable/btn_red3"
        android:layout_marginHorizontal="2dp"
        />
    <TextView
        android:id="@+id/Am2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/Am"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_red3"
        android:layout_marginHorizontal="2dp"
        />
    <TextView
        android:id="@+id/Bp2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/Bp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_red3"
        android:layout_marginHorizontal="2dp"
        />
    <TextView
        android:id="@+id/Bm2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:text="@string/Bm"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_red3"
        android:layout_marginHorizontal="2dp"
        />
    <TextView
        android:id="@+id/ABp2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/ABp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_red3"
        />
    <TextView
        android:id="@+id/ABm2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/ABm"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_red3"
        android:layout_marginHorizontal="2dp"
        />
    <TextView
        android:id="@+id/Op2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/Op"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_red3"
        android:layout_toRightOf="@+id/ABm"
        android:layout_marginHorizontal="2dp"
        />
    <TextView
        android:id="@+id/Om2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/Om"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_red3"
        android:layout_toRightOf="@+id/Op"
        android:layout_marginHorizontal="2dp"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/ll7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ll6"
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/zg"
            android:layout_weight="1"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ll7"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/tvCible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrez la zone cible"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cible"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColorHint="@color/gray4"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/gray4"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/zone"
                android:textSize="15sp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvTired"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Valide"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_red2"
            android:clickable="true"
            android:focusable="true"
            />



        <TextView
            android:id="@+id/longlat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />


        <TextView
            android:id="@+id/Dist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="distance"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColorHint="@color/gray4"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/gray4"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rayon"
                android:textSize="15sp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvValide"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Envoyer"
