        android:textColor="@color/white"
        android:background="@drawable/btn_red3"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        />
</LinearLayout>

    <ScrollView
        android:id="@+id/scrollv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll4">
        <LinearLayout
            android:id="@+id/scrollv2_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@drawable/btn_red4"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:weightSum="3">
                        <TextView
                            android:id="@+id/tvNom2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="EDIMA Christian"
                            android:gravity="center_vertical"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvLieu2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Yaounde simbock"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tvGroupe2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="A+"
                        android:textColor="@color/red_bloodlink"
                        android:textStyle="bold"
                        android:textSize="24sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/tvStatu"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="En attente"
                        android:background="@drawable/btn_red2"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tvAction"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_red2"
                        android:layout_margin="10dp"
                        android:text="Supprimer"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </ScrollView>


    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/arrow_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="@string/gs"
            android:textSize="22sp"
            android:textColor="@color/black"

            android:textStyle="bold"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
    android:id="@+id/ll6"
