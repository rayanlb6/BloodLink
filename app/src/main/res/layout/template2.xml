<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:background="@drawable/btn_red4"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:weightSum="3">
        <TextView
            android:id="@+id/tvNom2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="EDIMA Christian"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvLieu2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Yaounde simbock"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvGroupe2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="A+"
            android:textColor="@color/red_bloodlink"
            android:textStyle="bold"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/tvStatu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="En attente"
            android:background="@drawable/btn_red2"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_red2"
            android:layout_margin="10dp"
            android:text="Supprimer"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>