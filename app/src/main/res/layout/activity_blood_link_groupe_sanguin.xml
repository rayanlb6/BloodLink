<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BloodLinkGroupeSanguinActivity">
    <ImageView
        android:id="@+id/fleche"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow_black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/groupe"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"

        android:layout_marginTop="40dp"
        android:background="@drawable/btn_red3"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="B"
        android:layout_marginTop="40dp"
        android:textColor="@color/red_bloodlink"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/btn_red4"
        app:layout_constraintStart_toEndOf="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="O"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/btn_red3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintEnd_toStartOf="@+id/tv5"
        />
    <TextView
        android:id="@+id/tv5"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="AB"
        android:textColor="@color/red_bloodlink"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/btn_red4"
        app:layout_constraintStart_toEndOf="@id/tv4"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TextView
        android:id="@+id/tv6"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="HH"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/btn_red3"
        app:layout_constraintStart_toStartOf="@+id/tv4"
        app:layout_constraintTop_toBottomOf="@+id/tv4"
        app:layout_constraintEnd_toEndOf="@+id/tv4"
        />
    <TextView
        android:id="@+id/tv7"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/btn_red3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv6"
        app:layout_constraintEnd_toStartOf="@+id/tv8"

        />
    <TextView
        android:id="@+id/tv8"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:text="-"
        android:textColor="@color/red_bloodlink"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/btn_red4"
        app:layout_constraintStart_toEndOf="@+id/tv7"
        app:layout_constraintTop_toBottomOf="@+id/tv6"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TextView
        android:id="@+id/btn1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/sign"
        android:textSize="21sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/btn_red2"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>